﻿@using BOL;
@{
    ViewData["Title"] = "Index Page";
}


    @{
        List<Employee> allEmployees = (List<Employee>)ViewData["employees"];
     }


<!DOCTYPE html>
<html>
<head>
    <title>Employee List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #0066cc;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e0e0e0;
        }
    </style>
</head>
<body>
    <h1>Employee List</h1>


    <table>
        <thead>
            <tr>
                <th>EmpId</th>
                <th>Name</th>
                <th>Email</th>
                <th>Location</th>
                <th>JoinDate</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in allEmployees)
            {
                <tr>
                    <td>@e.EmpId</td>
                    <td>@e.Name</td>
                    <td>@e.Email</td>
                    <td>@e.Location</td>
                    <td>@e.JoinDate</td>
                    <td>@e.Salary</td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>